<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:background="@color/Gray_Background">


    <Button
        android:id="@+id/gmail_linkbutton"
        android:background="@drawable/email"
        android:layout_below="@+id/main_button"
        android:layout_toStartOf="@+id/main_button"
        android:layout_toLeftOf="@+id/main_button"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/phone_linkbutton"
        android:background="@drawable/phone"
        android:layout_below="@+id/main_button"
        android:layout_toEndOf="@+id/main_button"
        android:layout_toRightOf="@+id/main_button"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/ins_linkbutton"
        android:background="@drawable/instagram"
        android:textColor="#f8fdf9"
        android:minWidth="48dip"
        android:minHeight="49dp"
        android:layout_above="@+id/main_button"
        android:layout_toStartOf="@+id/main_button"
        android:layout_toLeftOf="@+id/main_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        />

    <Button
        android:id="@+id/snap_linkbutton"
        android:background="@drawable/snapchat"
        android:textColor="#f8fdf9"
        android:minWidth="48dip"
        android:minHeight="49dp"
        android:layout_above="@+id/main_button"
        android:layout_toEndOf="@+id/main_button"
        android:layout_toRightOf="@+id/main_button"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <Button
        android:background="@drawable/cancel"
        android:id="@+id/receive_button"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/main_button"
        android:layout_alignRight="@+id/main_button"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:visibility="invisible" />


    <Button
        android:id="@+id/facebook_linkbutton"
        android:layout_height="60dp"
        android:background="@drawable/round_shape_facebook"
        android:textColor="#f8fdf9"
        android:minWidth="48dip"
        android:minHeight="49dp"
        android:layout_width="60dp"

        android:gravity="center_horizontal"
        android:layout_marginRight="27dp"
        android:layout_alignTop="@+id/twitter_linkbutton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"/>

    <Button
        android:id="@+id/twitter_linkbutton"
        android:background="@drawable/twitter"
        android:textColor="#f8fdf9"
        android:minWidth="48dip"
        android:minHeight="49dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="27dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"/>

    <pl.bclogic.pulsator4droid.library.PulsatorLayout
        android:id="@+id/pulsator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:pulse_count="2"
        app:pulse_duration="1000"
        app:pulse_repeat="0"
        app:pulse_color="@android:color/black"
        app:pulse_startFromScratch="false"
        app:pulse_interpolator="Accelerate">

        <Button
            android:id="@+id/linkin_linkbutton"
            android:background="@drawable/linkedin"
            android:textColor="#f8fdf9"
            android:minWidth="48dip"
            android:minHeight="49dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/resume_linkbutton"
            android:layout_alignStart="@+id/resume_linkbutton"
            android:layout_marginTop="88dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/resume_linkbutton"
            android:background="@drawable/resume"
            android:layout_marginBottom="92dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </pl.bclogic.pulsator4droid.library.PulsatorLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_button"
        android:background="@drawable/logo_med"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/send_button"
        android:background="@drawable/send"
        android:layout_alignBaseline="@+id/main_button"
        android:layout_alignBottom="@+id/main_button"
        android:layout_toEndOf="@+id/gmail_linkbutton"
        android:layout_toRightOf="@+id/gmail_linkbutton"
        android:visibility="invisible" />

</RelativeLayout>